@model IEnumerable<SecondHand.Models.moskiobutveskupnimodel>
@{
	ViewData["Title"] = "List of Oblacila";
}

<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">
			<thead>
				<tr>
					<th>Znamka</th>
					<th>Slika</th>
					<th>Opis</th>
					<th>Telefonska številka</th>
					<th>Lokacija</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">

							@Html.DisplayFor(modelItem => item.obutvepodatki.ImeCevlja)
						</td>
						<td class="align-middle">
							<a asp-area="" asp-controller="ZenskaObutev" asp-action="DetailsProdukta" asp-route-id="@item.obutvepodatki.Id">
								<img class="rounded-circle" src="@item.obutvepodatki.SlikaCevljaUrl" alt="@item.obutvepodatki.ImeCevlja" style="max-width:150px">
							</a>
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.obutvepodatki.opis)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.uporabnikpodatki.PhoneNumber)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.uporabnikpodatki.City)
						</td>

					</tr>
				}
			</tbody>
		</table>
	</div>
</div>