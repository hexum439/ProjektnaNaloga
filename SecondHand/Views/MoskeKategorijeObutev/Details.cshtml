@model IEnumerable<SecondHand.Models.moskiobutveskupnimodel>
@{
	ViewData["Title"] = "List of Oblacila";
}
<head>
    <style>
        table {
            background-color: #F1E3E3;
            width: 95%;
        }

        th {
            background-color: #ADADAD;
        }

        div.tabela {
            margin-bottom: 20px;
        }

        th.cena {
            background-color: lightblue;
            width: 15%;
            text-align: center;
        }

        td.opis {
            text-align: center;
            width: 45%;
        }
    </style>
</head>
<div class="row">
	<div class="col-md-8 offset-md-2">
				@foreach (var item in Model)
				{
						 <div class="tabela">
                    <table>
                        <th colspan="4" style="text-align:center">@item.obutvepodatki.ImeCevlja</th>
                        <tr>
                            <td style="width;20%">
                            <img src="@item.obutvepodatki.SlikaCevljaUrl" width="100px" height="150px" alt="@item.obutvepodatki.ImeCevlja">
                            </td>

                        <td class="opis">@item.obutvepodatki.opis</td>

                            <td style="width:20%">
                                <p><b>Tel:</b> @item.uporabnikpodatki.PhoneNumber</p>
                                <p><b>Lokacija:</b> @item.uporabnikpodatki.City</p>
                            </td>

                        <th rowspan="3" class="cena"><h2>@item.obutvepodatki.cena €</h2></th>
                        </tr>
                    </table>

                    </div>
				}
	</div>
</div>