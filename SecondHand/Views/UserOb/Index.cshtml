                @Html.DisplayFor(modelItem => item.kategorijapodatki.ImeKategorije)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.oblacilapodatki.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.oblacilapodatki.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.oblacilapodatki.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
