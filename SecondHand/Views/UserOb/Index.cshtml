@model IEnumerable<SecondHand.Models.skupnimodel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.oblacilapodatki.ImeOblacila)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oblacilapodatki.SlikaOblekeUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oblacilapodatki.opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oblacilapodatki.owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oblacilapodatki.cena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oblacilapodatki.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oblacilapodatki.Kategorija)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.oblacilapodatki.ImeOblacila)
            </td>
